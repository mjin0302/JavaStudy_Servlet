<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.yedam.member.mapper.MemberMapper">
	<!-- id : 쿼리구문을 id값으로 구분함, 중복 불가능 resultType : 반환되는 타입 -->
	
	<select id="login" resultType="com.yedam.member.vo.MemberVO">
		select * from members where
		member_id = #{memberId} and member_pw=#{memberPw}
	</select>

	<!-- 등록 -->
	<insert id="addMember" parameterType="com.yedam.member.vo.MemberVO">
		insert into members(member_id, member_pw, member_name,
		member_phone, responsibility, image)
		values (#{memberId}, #{memberPw},
		#{memberName}, #{memberPhone}, 'user', #{image})
	</insert>

	<!-- 전체 조회 -->
	<select id="memberList" resultType="MemberVO">
		select * from members order
		by member_id
	</select>

	<!-- 한건 조회 -->
	<select id="getMember" parameterType="string"
		resultType="MemberVO">
		select * from members where member_id=#{id}
	</select>

	<!-- 수정 -->
	<!-- <update id="updateMember" parameterType="MemberVO"> -->
	<!-- UPDATE members SET member_name=#{memberName}, member_pw=#{memberPw}, 
				member_phone=#{memberPhone}, member_addr=#{memberAddr} -->
	<!-- WHERE member_id=#{memberId} -->
	<!-- </update> -->
	<update id="updateMember" parameterType="MemberVO">
		UPDATE members 
		<set>
			<if test="image != null">
				image = #{image},
			</if>
			<if test="memberName != null">
				member_name = #{memberName},
			</if>
			<if test="memberPw != null">
				member_pw = #{memberPw},
			</if>
			<if test="memberPhone != null">
				member_phone = #{memberPhone},
			</if>
			<if test="memberAddr != null">
				member_addr = #{memberAddr},
			</if>
			<if test="responsibility != null">
				responsibility = #{responsibility}
			</if>
		</set>
		WHERE member_id=#{memberId}
	</update>

	<!-- 회원 삭제 -->
	<delete id="deleteMember" parameterType="String">
		DELETE FROM members WHERE member_id = #{mid}
	</delete>
</mapper>